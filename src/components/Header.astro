---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header class='bg-brand-white shadow-sm'>
  <nav class='max-w-4xl mx-auto px-4 py-4 flex justify-between items-center'>
    <h2 class='text-2xl font-serif font-bold text-brand-primary'>
      <a href='/' class='hover:text-brand-secondary transition-colors'
        >{SITE_TITLE}</a
      >
    </h2>
    <div class='flex gap-4'>
      <HeaderLink
        href='/'
        class='text-brand-primary hover:text-brand-secondary font-medium'
        >Inicio</HeaderLink
      >
      <!-- Add more links here as needed -->
    </div>
  </nav>
</header>
