---
const today = new Date();
---

<footer class='bg-brand-primary text-brand-white py-8 mt-auto'>
  <div class='max-w-4xl mx-auto px-4 text-center'>
    <p class='font-serif mb-4'>
      &copy; {today.getFullYear()} Dulce Secreto. Todos los derechos reservados.
    </p>
    <div class='flex justify-center gap-6'>
      <a
        href='#'
        target='_blank'
        class='hover:text-brand-muted transition-colors'
      >
        <span class='sr-only'>Instagram</span>
        <!-- Instagram Icon Placeholder -->
        <svg
          xmlns='http://www.w3.org/2000/svg'
          width='24'
          height='24'
          viewBox='0 0 24 24'
          fill='none'
          stroke='currentColor'
          stroke-width='2'
          stroke-linecap='round'
          stroke-linejoin='round'
          class='lucide lucide-instagram'
          ><rect width='20' height='20' x='2' y='2' rx='5' ry='5'></rect><path
            d='M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z'></path><line
            x1='17.5'
            x2='17.51'
            y1='6.5'
            y2='6.5'></line></svg
        >
      </a>
      <a
        href='#'
        target='_blank'
        class='hover:text-brand-muted transition-colors'
      >
        <span class='sr-only'>Facebook</span>
        <!-- Facebook Icon Placeholder -->
        <svg
          xmlns='http://www.w3.org/2000/svg'
          width='24'
          height='24'
          viewBox='0 0 24 24'
          fill='none'
          stroke='currentColor'
          stroke-width='2'
          stroke-linecap='round'
          stroke-linejoin='round'
          class='lucide lucide-facebook'
          ><path
            d='M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z'
          ></path></svg
        >
      </a>
    </div>
  </div>
</footer>
