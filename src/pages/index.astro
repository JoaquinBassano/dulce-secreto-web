---
import Layout from '../layouts/Layout.astro';
import { SITE_TITLE, SITE_DESCRIPTION, BUSINESS_INFO, CONTACT, WHATSAPP_MESSAGES } from '../config';

import Hero from '../components/landing/Hero.astro';
import ProductsSection from '../components/landing/ProductsSection.astro';
import Footer from '../components/landing/Footer.astro';
---

<Layout>
  <main class='min-h-screen'>
    <Hero siteTitle={SITE_TITLE} siteDescription={SITE_DESCRIPTION} />
    <ProductsSection contact={CONTACT} whatsappMessages={WHATSAPP_MESSAGES} />
    <Footer businessInfo={BUSINESS_INFO} contact={CONTACT} />
  </main>

  <script>
    // Smooth scroll to products
    const scrollBtn = document.getElementById('scroll-to-products');
    if (scrollBtn) {
      scrollBtn.addEventListener('click', () => {
        const element = document.getElementById('products');
        element?.scrollIntoView({ behavior: 'smooth' });
      });
    }
  </script>
</Layout>
