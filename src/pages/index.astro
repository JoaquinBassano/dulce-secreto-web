---
import Layout from '../layouts/Layout.astro';
import { SITE_TITLE, SITE_DESCRIPTION, BUSINESS_INFO, CONTACT } from '../config';

import Hero from '../components/landing/Hero.astro';
import ProductsSection from '../components/landing/ProductsSection.astro';
import Footer from '../components/landing/Footer.astro';
---

<Layout>
  <main class='min-h-screen'>
    <Hero siteTitle={SITE_TITLE} siteDescription={SITE_DESCRIPTION} />
    <ProductsSection contact={CONTACT} />
    <Footer businessInfo={BUSINESS_INFO} contact={CONTACT} />
  </main>
</Layout>
